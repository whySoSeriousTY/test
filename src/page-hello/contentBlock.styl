.block-title-container{
    background-color: rgb(190, 164, 116);
    background-image: linear-gradient(to right, rgb(194, 176, 142) 3%, rgb(190, 164, 116) 100%);
    border-radius: 5px 5px 0px 0px;
    color: white;
    display:flex;
    height: 44px;

}
.block-title{
    padding :5px 10px;
    position: relative;
    cursor: pointer;
    font-size: 20px;
}
.content-links{
    height: 44px;
    line-height: 44px;
    padding: 0 5px;
    cursor: pointer;
}
.selected{
    color:gray;
}
.block-content{
    display: flex;
    flex-wrap: wrap;
    padding:10px;
    background-color:white;
}
.block-items{
    width: 33.3%;
    height: 314px;
    padding: 10px;
    box-sizing: border-box;
    float: left;
    transition: background-color .5s;
}
.block-link{
    display flex ;
    flex-direction :column;
    padding 10px;
}
.block-link:hover{
    background-color #F4F4F4;
}
.img{
    width: 100%;
    height: 208px;
    border-radius: 4px;
}
.item-title{
    font-size: 16px;
    color: black ;
    height: 22px;
    line-height: 22px;
    margin-bottom: 8px;
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    cursor: pointer;
}
.item-subTitle{
    font-size: 12px;
    color: #999;
    line-height: 18px;
    height: 18px;
    margin-bottom: 7px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.price-info{
    height: 27px;
    overflow: hidden;
    margin-bottom: 10px;
}
.oldPrice{
    font-size: 12px;
    color: #999;
    text-decoration: line-through;
}
.location{
    font-size: 12px;
    color: #999;
    float: right;
    margin-top: 10px;
}
.tip{
    height: 18px;
    line-height: 18px;
    text-align: center;
    border: 1px solid #d8d8d8;
    border-radius: 2px;
    float: left;
    margin-right: 10px;
    margin-bottom: 5px;
    padding: 0 3px;
}
.icon{
    font-size: 14px;
    color: #BE9E4D;
    font-weight: 500;
}
.price{
    font-size: 22px;
    color: #BE9E4D;
    margin-right: 6px;
    letter-spacing: -.8px;
    cursor: pointer;
}
.unit{
    font-size: 12px;
    letter-spacing: -.6px;
}


